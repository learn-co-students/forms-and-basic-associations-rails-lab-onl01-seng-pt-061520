<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <%= f.label :genre_id %>
  <%= collection_select( :song, :genre_id, Genre.all, :id, :name, prompt: true ) %>
  <br />
  <%= f.label :song_notes_1 %>
  <%= f.text_field :song_notes_1 %>
  <br />
  <%= f.label :song_notes_2 %>
  <%= f.text_field :song_notes_2 %>
  <br />
  <%= f.label :song_notes_3 %>
  <%= f.text_field :song_notes_3 %>
  <br />

  <%= f.submit %>
<% end %>
